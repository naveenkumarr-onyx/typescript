{
  "compilerOptions": {
    "target": "ES2016",                    // Target JavaScript version
    "module": "commonjs",                  // Module code generation
    "rootDir": "./src",                    // Source folder
    "outDir": "./build",                   // Output folder for compiled files
    "esModuleInterop": true,               // Compatibility with ES modules
    "strict": true,                        // Enable all strict type-checking options
    "skipLibCheck": true,                  // Skip checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure consistent casing in imports
  },
  "include": ["src/**/*.ts"],              // Include all TypeScript files in src folder
  "exclude": ["node_modules"]              // Exclude node_modules
}
